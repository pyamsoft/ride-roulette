readonly NAME="extract"

BIN_DIR="$(dirname "$(realpath "$0")")"
ROOT_DIR="$(realpath "${BIN_DIR}/..")"
unset BIN_DIR
readonly ROOT_DIR

_dist="${ROOT_DIR}/dist"

_log() {
  _msg="$1"
  shift

  printf -- "[%s] ${_msg}\n" "${NAME}" "$@"

  unset _msg
  return 0
}

main() {
  rm -rf "${_dist}" || {
    printf -- 'Failed to prune old extraction directory: %s' "${_dist}"
    return 1
  }

  mkdir -p "${_dist}" || {
    _log 'Failed to create extraction target directory: %s' "${_dist}"
    return 1
  }

  _cmd="docker"
  if command -v podman >/dev/null; then
    _cmd="podman"
  fi

  exec "${_cmd}" run \
    --rm -i -t \
    --security-opt no-new-privileges:true \
    --cap-drop ALL \
    --mount type=bind,source="${_dist}",target=/output \
    localhost/pyamsoft/ride-roulette:latest
}

main "$@" || exit 1
exit 0
